<h1>{{ post.user.username }}'s Tech Blog Post</h1>
{{> postCard creator=post.user.username title=post.title createdAt=post.createdAt description=post.description}}

   <h3>Add a Comment</h3>
   <div class="row">
    <div class="col s12 m6">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title">{{username}}</span>
          <p class="post-link" data-note="{{title}}">{{title}}</p>
          <p>{{text}}</p>
          </div>
      </div>
    </div>
  </div>
   <div class="row">
    <form class="new-post-form col s8">
        <div class="row">
        <div class="input-field col s6">
          <textarea id="comment-title" class="materialize-textarea"></textarea>
          <label for="comment-title">Title</label>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s8">
          <textarea id="comment-text" class="materialize-textarea"></textarea>
          <label for="comment-text">Text</label>
        </div>
      </div>
       <button id="new-comment"class="btn waves-effect waves-light" type="submit" name="action">Submit
    <i class="material-icons right">send</i>
  </button>
    </form>
  </div>