<div class="card">
  <div class="card-body">
    <div class="card-header">
       <h4>{{format_date createdAt}}</h4>
         <h4> {{ creator }}</h4>
         </div>
    <div>
    <h3 class="card-title">
      {{#if postId}}
      <a href="/posts/{{ postId }}">{{ title }}</a>
      {{else}}
      {{ title }}
      {{/if}}
    </h3>
    </div>
       <div class="card-text">{{ description }}</div>
 
  </div>
</div>
