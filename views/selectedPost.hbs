<div class="post-body">
{{> postCard creator=post.user.username title=post.title createdAt=post.createdAt description=post.description}}
<div>
  <div class="comment-card">
  <div class="comments-header">
Comments
</div>
{{#if comments}}
  {{#each comments as |comment|}}

{{> commentCard comments=comments creator=comment.user text=comment.text createdAt=comment.createdAt}}

  {{/each}}
{{/if}}
</div>
</div>
<div>
  <form id="new-comment-form">
  <div class="comment-form"> 
      <label for="form-title">Add Comments:</label>
      
    <input type="hidden" id="post-id" value="{{ post.id }}">
      
     </div>
       <div class="comment-form-group">  
    <textarea class="box-text" id="comment-text" name="comment-box" rows="4" cols="180"></textarea>
</div>
    <button id="new-comment" type="submit" value="submit" name="action">
      Submit
    </button>
  
  </form> 
</div>
</div>
</div>
<script src="/js/addComment.js"></script>

